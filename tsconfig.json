{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "types": [
      "vitest/globals",
      "unplugin-vue-define-options/macros-global",
      "unplugin-vue-macros/macros-global"
    ],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist/types",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "vueCompilerOptions": {
    "target": 3,
    "plugins": [
      "@vue-macros/volar/define-options",
      "@vue-macros/volar/define-slots"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "shims.d.ts",
    "volar.d.ts"
  ]
}
